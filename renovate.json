{
  "extends": ["config:base"],
  "java": {
    "additionalBranchPrefix": "java-",
    "commitMessagePrefix": "[Backend]",
    "extends": ["group:all"]
  },
  "js": {
    "additionalBranchPrefix": "js-",
    "commitMessagePrefix": "[Client]",
    "extends": ["group:allNonMajor"],
    "packageRules": [
      {
        "matchPackagePatterns": ["*"],
        "matchUpdateTypes": ["major"],
        "dependencyDashboardApproval": true
      },
      {
        "matchPackagePatterns": ["^react"],
        "matchUpdateTypes": ["major", "minor"],
        "enabled": true,
        "groupName": "react"
      },
      {
        "matchPackagePatterns": ["yup", "@types/yup"],
        "separateMinorPatch": true
      },
      {
        "matchPackagePatterns": ["yup", "@types/yup"],
        "matchUpdateTypes": ["major", "minor"],
        "enabled": false
      }
    ]
  }
}
